#include <appbase/application.hpp>
#include <boost/preprocessor/seq/for_each.hpp>

#include <koinos/manifest/plugins.hpp>

{% for plugin in plugins %}
#include <koinos/plugins/{{ plugin["plugin_name"] }}/{{ plugin["plugin_name"] }}_plugin.hpp>
{% endfor %}

namespace koinos::plugins {

void register_plugins()
{
   {% for plugin in plugins %}
   appbase::app().register_plugin< koinos::plugins::{{ plugin["plugin_namespace"] }}::{{ plugin["plugin_name" ] }}_plugin >();
   {% endfor %}
}

}
